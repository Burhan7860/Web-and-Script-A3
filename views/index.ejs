<!-- Container for the main interface with success and error alerts for assignment submission, a header image, title, and buttons to create or manage assignments -->
<%- include Partials/header.ejs %> <%- include Partials/main_nav.ejs %>
<div class="container text-center">
  <% if (typeof submitted !== 'undefined' && submitted) { %>
  <div class="alert alert-success alert-dismissible my-5 text-start">
    <strong>Success!</strong> Your Assignment was submitted!
    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
  </div>
  <% } %> <% if (typeof submitted !== 'undefined' && !submitted) { %>
  <div class="alert alert-danger alert-dismissible my-5 text-start">
    <strong>Error!</strong> Your Assignment could not be submitted.
    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
  </div>
  <% } %>
  <img
    class="d-block mx-auto mt-5 mb-4"
    src="/Content/favicon.svg"
    alt="Assignment Icon"
    width="72"
  />
  <h1 class="display-4 fw-bold mb-4"><%= title %></h1>
  <div class="btn-group">
    <a href="/editor" class="btn btn-primary btn-lg">Create an Assignment</a>
    <a href="/manage" class="btn btn-secondary btn-lg">Manage an Assignment</a>
  </div>
</div>
<%- include Partials/footer.ejs %>
